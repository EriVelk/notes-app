extends ../layout

block content
     div(class='text-center mt-2')
          h4(class='card-title display-6')= title
     div(class='form-group')
          a(href='/tasks/task' class='btn btn-block btn-success text-center') Add New Task <i class="fa fa-plus-circle" aria-hidden="true"></i>
     div(class='conatiner mt-2')
          div(class='card-list')
               for task in tasks
                    div(class='card mt-2')
                         div(class='card-body')
                              div(class='card-title text-center')
                                   h5= task.date_format
                              div(class='card-text text-center')
                                   h6= task.description
                                   hr
                                   h6= format(task.created_at)
                              if(task.status == false)
                                   div(class='card-footer text-center')
                                        a(href='/tasks/task/done/'+task._id class='btn btn-danger btn-sm') <i class="fa fa-times-circle" aria-hidden="true"></i>
                                        
                                        a(href='/tasks/edit/'+task._id class='btn btn-info btn-sm ml-2') <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        
                                        a(href='/tasks/task/delete/'+task._id class='btn btn-warning btn-sm ml-2') <i class="fa fa-trash" aria-hidden="true"></i>
                              else
                                   div(class='card-footer text-center')
                                        a(href='/tasks/task/done/'+task._id class='btn btn-success btn-sm') <i class="fa fa-check-circle" aria-hidden="true"></i>
                                        a(href='/tasks/task/delete/'+task._id class='btn btn-warning btn-sm ml-2') <i class="fa fa-trash" aria-hidden="true"></i>