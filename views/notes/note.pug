extends ../layout

block content

     if errors
          for error in errors
               <div class="mt-2 alert alert-warning alert-dismissible fade show" role="alert">
                    strong= error.msg
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                    </button>
               </div>
               
     form(action='' method='POST')
          div(class='card mt-2 mb-2')
               div(class='card-body')
                    h4(class='card-title text-center')= title
                    div(class='form-group')
                         label(for='title') Title
                         input(id='title' type='text' name='title' class='form-control' placeholder='Title' autofocus value=(undefined===note ? '' : note.title))
                    div(class='form-group')
                         label(for='description') Description
                         if undefined===note
                              textarea(id='description' name='description', cols="30", rows="10"  class='form-control')
                         else
                              textarea(id='description' name='description', cols="30", rows="10"  class='form-control')= note.description
                    div(class='text-center')
                         button(class='btn btn-success') Save <i class="fa fa-floppy-o" aria-hidden="true"></i>

                    